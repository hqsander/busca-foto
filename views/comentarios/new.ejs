<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Escreva um comentário para <%= fotografo.nome %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/fotografos/<%= fotografo._id %>/comentarios" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comentario[textoComentario]" placeholder="comentário">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Enviar</button>
                </div>
            </form>
            <a href="/fotografos">Voltar</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

