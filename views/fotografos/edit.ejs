<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Editar <%= fotografo.nome %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/fotografos/<%= fotografo._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="fotografo[nome]" value="<%= fotografo.nome %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="fotografo[imagem]" value="<%= fotografo.imagem %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="fotografo[bio]" value="<%= fotografo.bio %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Enviar</button>
                </div>
            </form>
            <a href="/fotografos">Voltar</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

